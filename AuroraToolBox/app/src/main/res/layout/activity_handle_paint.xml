<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <SurfaceView
        android:id="@+id/camera_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/back_button" />

    <com.odm.tool.handingpaint.AlignmentView
        android:id="@+id/alignment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/center"
            android:layout_width="0.0dip"
            android:layout_height="0.0dip"
            android:layout_centerInParent="true" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="50.0dip"
            android:layout_marginRight="50.0dip"
            android:layout_toLeftOf="@id/center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/paint_horizontal_label"
                android:textColor="@color/gradienter_degree"
                android:textSize="25.0dp" />

            <TextView
                android:id="@+id/horizental_degree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gradienter_degree"
                android:textSize="25.0dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="50.0dip"
            android:layout_marginBottom="50.0dip"
            android:layout_toRightOf="@id/center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/paint_vertical_label"
                android:textColor="@color/gradienter_degree"
                android:textSize="25.0dp" />

            <TextView
                android:id="@+id/vertical_degree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gradienter_degree"
                android:textSize="25.0dp" />

        </LinearLayout>
    </RelativeLayout>
</FrameLayout>