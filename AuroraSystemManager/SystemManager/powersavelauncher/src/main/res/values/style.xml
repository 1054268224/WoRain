<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="PowerLauncherTheme" parent="@style/Theme.Cyee.Light">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowShowWallpaper">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- 设置及添加应用界面主题 -->
    <style name="PowerLauncherSettingsTheme" parent="@style/Theme.Cyee.Light">
        <item name="cyeeactionBarStyle">@style/LightActionBarStyle</item>
        <item name="android:actionBarDivider">@null</item>
        <!--<item name="android:homeAsUpIndicator">@drawable/cyee_ic_ab_back_light</item>-->
    </style>

    <style name="LightActionBarStyle" parent="@style/Widget.Cyee.Light.ActionBar.Solid.Inverse">
        <item name="cyeetitleTextStyle">@style/LightActionBarStyleTextStyle</item>
        <item name="cyeebackground">@drawable/common_blue_bg</item>
        <item name="cyeebackgroundSplit">@drawable/common_blue_bg</item>
        <item name="cyeebackgroundStacked">@drawable/common_blue_bg</item>
    </style>

    <style name="LightActionBarStyleTextStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>