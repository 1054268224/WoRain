<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="GnLightTheme" parent="@style/Theme.Cyee.Light">
        <item name="cyeeactionBarStyle">@style/LightActionBarStyle</item>
        <item name="android:actionBarTabStyle">@style/LightActionBarTabView</item>
        <item name="android:actionBarTabBarStyle">@style/Gn_actionBarTabBarStyle</item>
        <item name="android:actionBarTabTextStyle">@style/Gn_actionBarTabTextStyle</item>
        <item name="android:actionBarWidgetTheme">@style/ActionBarTheme</item>
        <item name="android:itemTextAppearance">@style/GNTextAppearance</item>
        <item name="android:popupMenuStyle">@style/GNpopupMenuStyle</item>
        <item name="android:dropDownListViewStyle">@style/GNdropDownListViewStyle</item>
    </style>

    <style name="LightActionBarTabView" parent="@android:style/Widget.Holo.ActionBar.TabView">
        <item name="android:background">@drawable/gn_action_bar_item_back</item>
    </style>

    <style name="Gn_actionBarTabTextStyle" parent="@android:style/Widget.Holo.ActionBar.TabText">
        <!--        <item name="android:textSize">@dimen/gn_action_bar_tab_textsize</item> -->
        <item name="android:textColor">@color/tab_indicator_textcolor</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Gn_actionBarTabBarStyle" parent="@android:style/Widget.Holo.ActionBar.TabBar">
        <item name="android:divider">@drawable/zzzzz_gn_tabbar_divider</item>
        <item name="android:showDividers">middle</item>
        <item name="android:dividerPadding">0dip</item>
    </style>

    <style name="ActionBarTheme" parent="@android:style/Theme.Holo">
        <item name="android:textColorHint">#CCCCCC</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:popupMenuStyle">@android:style/Widget.Holo.Light.PopupMenu</item>
        <item name="android:dropDownListViewStyle">@style/ListViewDropdownStyle</item>
    </style>

    <!--  
    <style name="GNTextAppearance" parent="@android:style/TextAppearance.Inverse">
        <item name="android:textColor">@android:color/black</item>
    </style>
    -->
    <style name="GNpopupMenuStyle" parent="@android:style/Widget.Holo.PopupMenu">
        <item name="android:popupBackground">@android:color/white</item>
    </style>

    <style name="GNdropDownListViewStyle" parent="@android:style/Widget.Holo.ListView.DropDown">
        <item name="android:divider">@android:drawable/divider_horizontal_bright</item>
    </style>

    <style name="ListViewDropdownStyle" parent="@android:style/Widget.ListView.DropDown">
        <item name="android:listSelector">?android:attr/listChoiceBackgroundIndicator</item>
    </style>

    <!-- hardware & software consume -->
    <style name="GnLightSecondTheme" parent="@style/GnLightTheme">
        <item name="cyeeactionBarStyle">@style/LightSecondActionBarStyle</item>
    </style>


    <style name="LightSecondActionBarStyle" parent="@style/Widget.Cyee.Light.ActionBar.Solid.Inverse">
        <item name="cyeebackground">@drawable/actionbar_bg</item>
        <item name="cyeebackgroundStacked">@drawable/actionbar_bg</item>
    </style>
</resources>
