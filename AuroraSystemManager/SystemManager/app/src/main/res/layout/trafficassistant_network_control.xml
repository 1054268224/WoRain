<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/traffic_control_menu_height"
        android:background="?attr/listChoiceBackgroundIndicator"
        android:layout_marginTop="0dp">

        <cyee.widget.CyeeTextView
            android:id="@+id/content_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/traffic_control_appnum_margin_left"
            android:paddingTop="@dimen/network_control_header_padding_top"
            android:textColor="@color/textcolor_level_one"
            android:textSize="@dimen/textsize_minitab" />

        <cyee.widget.CyeeTextView
            android:id="@+id/action_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/text_margin_right"
            android:onClick="onClick" 
            android:paddingTop="@dimen/network_control_header_padding_top"
            android:text="@string/action_all_prohibit"
            android:textColor="@color/list_header_text_color"
            android:textSize="@dimen/text_size" />
    </RelativeLayout>

    <View
        android:id="@+id/separator_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/separator_line"
        android:layout_below="@id/title_layout"
        android:background="#d1d1d1" 
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/separator_line">
        <cyee.widget.CyeeListView
            android:id="@+id/app_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cyee_list_divider_padding_start="@dimen/icon_list_divider_left_padding" >
         </cyee.widget.CyeeListView>
    </LinearLayout>
    <cyee.widget.CyeeTextView
        android:id="@+id/text_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/empty_view_icon_and_text_margin_top"
        android:drawablePadding="@dimen/empty_icon_text_space"
        android:drawableTop="@drawable/empty_image"
        android:textColor="@color/empty_text_color_primary"
        android:textSize="@dimen/empty_text_size"
        android:visibility="gone" />

    <com.quinny898.library.persistentsearch.SearchBox
        android:id="@+id/searchbox"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />

</RelativeLayout>