<?xml version="1.0" encoding="utf-8"?>
<!-- Chenyee: guoxt <2018-08-06> add for CSW1705A-2751  begin -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/softmanager_listview_height"
    android:descendantFocusability="blocksDescendants"
    android:background="@color/white">
    <!-- Chenyee: guoxt <2018-08-06> add for CSW1705A-2751  end -->
    <LinearLayout
        android:id="@+id/container_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/image_margin_left"
        android:layout_marginEnd="@dimen/image_margin_right"
        android:gravity="center" >

        <ImageView
            android:id="@+id/icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="false" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/container"
        android:layout_toEndOf="@+id/container_icon"
        android:focusable="false"
        android:orientation="vertical" >

       <!--guoxt modify for CR01597516 begin-->
        <cyee.widget.CyeeTextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:singleLine="true"
            android:textColor="#cc000000"
            android:textSize="@dimen/prefs_title_size" />
       <!--guoxt modify for CR01597516 end-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <cyee.widget.CyeeTextView
                android:id="@+id/summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:textAppearance="?android:attr/textAppearanceSmall" 
                android:textSize="@dimen/prefs_summary_size"
                android:visibility="gone"/>

            <cyee.widget.CyeeTextView
                android:id="@+id/frequency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="12sp"
                android:visibility="gone" />

            <cyee.widget.CyeeTextView
                android:id="@+id/app_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:paddingStart="13sp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/softmanager_trust_child_summary_txtcolor"
                android:textSize="12sp"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false" >

        <cyee.widget.CyeeButton
            android:id="@+id/btn"
            android:layout_width="@dimen/limited_btn_width"
            android:layout_height="@dimen/limited_btn_height"
            android:layout_marginEnd="20dp"
            android:text="@string/uninstall"
            android:textSize="14sp"
            android:visibility="gone" />

        <cyee.widget.CyeeCheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dip"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:visibility="gone" />

        <cyee.widget.CyeeRadioButton
            android:id="@+id/radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dip"
            android:visibility="gone" />

        <include
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dip"
            layout="@layout/movingview" />

        <cyee.widget.CyeeSwitch
            android:id="@+id/switch_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dip"
            android:visibility="gone" />

        <Button
            android:id="@+id/permission_btn"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginEnd="20dip"
            android:background="@drawable/uninistall_bg"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:textColor="@color/softmanager_green_button_txtcolor"
            android:textSize="14sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/move_btn"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginEnd="20dip"
            android:background="@drawable/uninistall_bg"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:textColor="@color/softmanager_green_button_txtcolor"
            android:textSize="14sp"
            android:visibility="gone" />

        <cyee.widget.CyeeTextView
            android:id="@+id/total_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="20dip"
            android:focusable="false"
            android:singleLine="true"
            android:textColor="#66000000"
            android:textSize="12sp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dip"
            android:src="@drawable/right_arrow"
            android:visibility="visible" />
    </FrameLayout>

    <cyee.widget.CyeeTextView
        android:id="@+id/important_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="45dip"
        android:text="@string/permission_important"
        android:textColor="@color/softmanager_permission_important_txtcolor"
        android:textSize="11sp"
        android:visibility="gone" />

    <View
        android:id="@+id/divider_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/divider_color"
        android:visibility="gone" />

</RelativeLayout>