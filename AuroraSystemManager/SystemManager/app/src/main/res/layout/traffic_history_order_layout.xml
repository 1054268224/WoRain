<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        layout="@layout/loadview" />

    <cyee.widget.CyeeListView
        android:id="@+id/historyorder_listview"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:cyee_list_divider_padding_end="0dp"
        app:cyee_list_divider_padding_start="@dimen/historyorder_margin_left"
        android:layout_below="@+id/header_bar" />

    <LinearLayout
        android:id="@+id/historyorder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:orientation="vertical"
        android:visibility="visible" >

	<RelativeLayout
        android:id="@+id/historyorder_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:visibility="gone" >
        <ImageView 
            android:id="@+id/historyorder_empty_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:background="@drawable/empty_image" />
        <cyee.widget.CyeeTextView 
            android:id="@+id/historyorder_empty_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_below="@+id/historyorder_empty_img"
            android:layout_centerHorizontal="true"
            android:text="@string/historyorder_empty_txt"
            android:textColor="@color/empty_text_color_primary"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/historyorder_retry"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:orientation="vertical"
        android:visibility="gone" >
        <cyee.widget.CyeeTextView 
            android:id="@+id/historyorder_query_failed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_centerHorizontal="true"
            android:text="@string/historyorder_query_failed"
            android:textSize="16sp" />
        <cyee.widget.CyeeButton
            android:id="@+id/historyorder_retry_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_below="@+id/historyorder_query_failed"
	     android:layout_centerHorizontal="true"
            android:text="@string/historyorder_retry"
            android:textSize="14dp" />
    </RelativeLayout>   
    </LinearLayout>
</RelativeLayout>