<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    
    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        layout="@layout/loadview" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
	    
	    <RelativeLayout 
	        android:id="@+id/container"
	        android:layout_width="fill_parent"
	        android:layout_height="match_parent"
	        android:visibility="gone">

	        <include
	            android:id="@+id/id_header"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_below="@+id/editmodeview"
	            layout="@layout/header_list"
				android:layout_marginTop="0dp"/>
	
	        <include
	            android:layout_width="fill_parent"
	            android:layout_height="match_parent"
	            android:layout_below="@+id/id_header"
	            android:layout_marginBottom="50dp"
	            layout="@layout/listview" />
	
	    </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/button_padding"
        android:paddingLeft="@dimen/button_padding"
        android:paddingRight="@dimen/button_padding" >

        <cyee.widget.CyeeButton
            android:id="@+id/btn_clean"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_gravity="center"
            android:onClick="oneClean"
            android:text="@string/text_add_white_list"
            android:textSize="16sp"
            android:textColor="@color/limited_btn_textcolor" />
    </LinearLayout>

    <cyee.widget.CyeeTextView
        android:id="@+id/text_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/empty_view_icon_and_text_margin_top"
        android:drawablePadding="@dimen/empty_icon_text_space"
        android:drawableTop="@drawable/sw_empty_image"
        android:textColor="@color/empty_text_color_primary"
        android:textSize="@dimen/empty_text_size"
        android:visibility="gone" />

	<com.quinny898.library.persistentsearch.SearchBox
		android:id="@+id/searchbox"
		android:visibility="gone"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_alignParentTop="true" />

</RelativeLayout>