<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/gn_restriction_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/listview_height"
    android:background="?attr/listChoiceBackgroundIndicator"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/img_gn_ic_icon_limit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/image_margin_left"
        app:srcCompat="@drawable/gn_ic_icon_limit" />

    <cyee.widget.CyeeTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/limit_flow"
        android:textSize="@dimen/textsize_level_one"
        android:textColor="@color/textcolor_level_one"
        android:paddingStart="@dimen/image_margin_left"/>
    
    <cyee.widget.CyeeTextView
        android:id="@+id/restrict_value"
        style="@style/GnSubTitleTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/limit_flow"
        android:paddingEnd="@dimen/text_margin_right"
        android:textSize="@dimen/textsize_minitab" 
        android:textColor="@color/textcolor_level_one"/>
    
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="12dip"
        app:srcCompat="@drawable/gn_refresh_imageview_bg"
        android:visibility="gone"/>

</LinearLayout>
