        <LinearLayout
            android:id="@+id/battery_level_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/battery_bg"
                android:layout_width="23dp"
                android:layout_height="45dp"
                cusattrs:srcCompat="@drawable/powersave_battery"
                android:layout_marginTop="13dp"
                android:visibility="visible" />

            <View
                android:layout_width="18dp"
                android:layout_height="match_parent" />

            <cyee.widget.CyeeTextView
                android:id="@+id/battery_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/single_progress_color"
                android:textSize="52sp"/>

            <cyee.widget.CyeeTextView
                android:id="@+id/battery_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/single_progress_sign"
                android:textColor="@color/single_progress_color"
                android:textStyle="bold"
                android:textSize="52sp"/>

        </LinearLayout>

         <!-- guoxt modify for CSW1703AC-71 begin  -->
        <cyee.widget.CyeeTextView
            android:id="@+id/background_running_processes_entry"
            android:layout_width="@dimen/background_running_processes_width"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_below="@id/battery_level_view"
            android:text="@string/power_consume_background_list_title_lite"
            android:textColor="@color/single_progress_color"
            android:textSize="@dimen/battery_usage_textSize"
            android:visibility="gone"/>
        <!-- guoxt modify for CSW1703AC-71 end  -->
        <!-- Gionee <yangxinruo> <2016-2-1> <add> for CR01634814 end -->

        <cyee.widget.CyeeTextView
            android:id="@+id/power_usetime_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/battery_usage_textMarginBottom"
            android:textColor="@color/white"
            android:textSize="@dimen/battery_usage_textSize" />

        <cyee.widget.CyeeTextView
            android:id="@+id/power_daily_noti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/power_usetime_show"
            android:layout_centerHorizontal="true"
            android:text="@string/daily_power_open_noti"
            android:textColor="@color/white"
            android:textSize="@dimen/battery_usage_textSize"
            android:visibility="gone" />

        <!--<cyee.widget.CyeeButton
