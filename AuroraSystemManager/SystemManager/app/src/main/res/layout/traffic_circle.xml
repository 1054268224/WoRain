<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cusattrs="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/background_height"
    android:orientation="vertical">

    <com.cydroid.softmanager.view.TrafficaBallView
        android:id="@+id/traffic_wave"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_centerInParent="true"/>

    <com.cydroid.softmanager.view.TrafficCircleView
        android:id="@+id/traffic_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        cusattrs:centerX="@dimen/traffic_centerX"
        cusattrs:centerY="@dimen/traffic_centerY"
        cusattrs:innerCircleAlpha="51"
        cusattrs:innerRadius="@dimen/traffic_innerRadius"
        cusattrs:innerStartAngle="120"
        cusattrs:innerStrokeWidth="@dimen/traffic_innerStrokeWidth"
        cusattrs:innerSweepAngle="300"
        cusattrs:outerCircleAlpha="51"
        cusattrs:outerRadius="@dimen/traffic_outerRadius"
        cusattrs:outerStartAngle="120"
        cusattrs:outerStrokeWidth="@dimen/traffic_outerStrokeWidth"
        cusattrs:outerSweepAngle="300" />

    <ImageView
        android:id="@+id/img_prompt_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/traffic_img_prompt_marginTops"
        android:src="@drawable/prompt_traffic_settings"
        android:visibility="gone" />

    <cyee.widget.CyeeTextView
        android:id="@+id/gn_time_zone"
        style="@style/TextShadowStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/traffic_time_zone_marginTops"
        android:textColor="#f00"
        android:textSize="@dimen/traffic_gn_flow_state_size" />

    <cyee.widget.CyeeTextView
        android:id="@+id/gn_flow_state"
        style="@style/TextShadowStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/traffic_flow_state_marginTops"
        android:textColor="#0f0"
        android:textSize="12dp" />

    <cyee.widget.CyeeTextView
        android:id="@+id/gn_state_value"
        style="@style/TextShadowStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-5dp"
        android:layout_below="@id/traffic_wave"
        android:includeFontPadding="false"
        android:textColor="#00f"
        android:textSize="@dimen/traffic_gn_state_value_size"
        android:visibility="gone"/>

    <cyee.widget.CyeeTextView
        android:id="@+id/gn_unit_value"
        style="@style/TextShadowStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/gn_state_value"
        android:layout_toRightOf="@id/gn_state_value"
        android:includeFontPadding="false"
        android:textColor="#ff0"
        android:textSize="14sp"
        android:visibility="gone"/>

    <cyee.widget.CyeeTextView
        android:id="@+id/gn_used_flow"
        style="@style/TextShadowStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-3dp"
        android:layout_centerInParent="true"
        android:textColor="#f0f"
        android:textStyle="bold"
        android:textSize="45sp"/>

    <cyee.widget.CyeeTextView
        android:id="@+id/gn_state_value_other"
        style="@style/TextShadowStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/gn_used_flow"
        android:includeFontPadding="false"
        android:textColor="#0ff"
        android:textSize="@dimen/traffic_gn_state_value_size"
        android:visibility="gone" />

    <cyee.widget.CyeeTextView
        android:id="@+id/gn_unit_value_other"
        style="@style/TextShadowStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/gn_state_value_other"
        android:layout_toRightOf="@id/gn_state_value_other"
        android:includeFontPadding="false"
        android:textColor="#f88"
        android:textSize="14sp"
        android:visibility="gone" />

    <cyee.widget.CyeeButton
        android:id="@+id/flow_button"
        style="@style/TextShadowStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/traffic_set"
        android:layout_below="@id/gn_state_value_other"
        android:ellipsize="end"
        android:maxWidth="90dp"
        android:singleLine="true"
        android:textSize="14dp"
        android:background="@drawable/speedup_btn"
        android:visibility="gone"/>

</RelativeLayout>