<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cusattrs="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/background_height"
        android:background="@drawable/common_blue_bg" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <com.cydroid.softmanager.view.MainCircleView
                android:id="@+id/main_circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                cusattrs:centerX="@dimen/main_centerX"
                cusattrs:centerY="@dimen/main_centerY"
                cusattrs:innerCircleAlpha="30"
                cusattrs:innerRadius="@dimen/main_innerRadius"
                cusattrs:innerStartAngle="124"
                cusattrs:innerStrokeWidth="@dimen/main_innerStrokeWidth"
                cusattrs:innerSweepAngle="290"
                cusattrs:outerCircleAlpha="0"
                cusattrs:outerRadius="@dimen/main_outerRadius"
                cusattrs:outerStartAngle="0"
                cusattrs:outerStrokeWidth="@dimen/main_outerStrokeWidth"
                cusattrs:outerSweepAngle="360" />

            <com.cydroid.softmanager.view.MainOuterCircleView
                android:id="@+id/main_outer_circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/main_circle"
                android:layout_alignStart="@id/main_circle"
                cusattrs:centerX="@dimen/main_centerX"
                cusattrs:centerY="@dimen/main_centerY"
                cusattrs:innerCircleAlpha="0"
                cusattrs:innerRadius="@dimen/main_innerRadius"
                cusattrs:innerStartAngle="124"
                cusattrs:innerStrokeWidth="@dimen/main_innerStrokeWidth"
                cusattrs:innerSweepAngle="290"
                cusattrs:outerCircleAlpha="0"
                cusattrs:outerRadius="@dimen/main_outerRadius"
                cusattrs:outerStartAngle="0"
                cusattrs:outerStrokeWidth="@dimen/main_outerStrokeWidth"
                cusattrs:outerSweepAngle="360" />

            <cyee.widget.CyeeTextView
                android:id="@+id/scan_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/main_scan_score_margin_top"
                android:textColor="@color/white"
                android:textSize="@dimen/main_scan_score_txt_size" />

            <cyee.widget.CyeeTextView
                android:id="@+id/scan_score_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/main_scan_score_unit_margin_top"
                android:layout_toRightOf="@id/scan_score"
                android:text="@string/text_score_unit"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <cyee.widget.CyeeTextView
                android:layout_below="@id/rocket_img"
                android:id="@+id/memory_release_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:visibility="gone" />

            <cyee.widget.CyeeButton
                android:layout_below="@id/scan_score"
                android:layout_marginTop="10dp"
                android:id="@+id/rocket_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/speedup_btn_text"
                android:ellipsize="end"
                android:maxWidth="90dp"
                android:singleLine="true"
                android:textSize="14dp"
                android:background="@drawable/speedup_btn"/>

            <LinearLayout
                android:id="@+id/ram_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/main_views_margin_top"
                android:gravity="center"
                android:orientation="horizontal" >

                <cyee.widget.CyeeTextView
                    android:id="@+id/used_ram_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/main_used_ram_txt_size" />

                <View
                    android:layout_width="1px"
                    android:layout_height="15dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@android:color/white" />

                <cyee.widget.CyeeTextView
                    android:id="@+id/total_ram_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/main_total_ram_txt_size" />
            </LinearLayout>
        </RelativeLayout>

        <cyee.widget.CyeeTextView
            android:id="@+id/txt_scan_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/main_txt_scan_info_margin_bottom"
            android:text="@string/text_scaning_reminder"
            android:textColor="#FFFFFF"
            android:textSize="11sp" />
    </RelativeLayout>
<!-- fengpeipei add ScrollView for 47046 -->
    <cyee.widget.CyeeListView
        android:id="@+id/running_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header"
        android:visibility="gone"/>

    <cyee.widget.CyeeTextView
        android:id="@+id/no_running_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header"
        android:gravity="center"
        android:textSize="18sp"
        android:text="@string/no_running_app"
        android:visibility="gone"/>
    <ProgressBar
        android:id="@+id/loading_process_bar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:layout_marginTop="100dp"
        android:layout_centerInParent="true"
        android:gravity="center"/>
</RelativeLayout>
