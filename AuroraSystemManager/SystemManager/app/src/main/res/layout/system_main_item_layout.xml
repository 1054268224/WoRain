<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/primary_action_view"
    android:layout_width="match_parent"
    android:layout_height="@dimen/main_activity_item_height"
    android:background="?attr/listChoiceBackgroundIndicator"
    android:descendantFocusability="blocksDescendants" >

    <ImageView
        android:id="@+id/system_main_item_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/softmanager_main_left"
        android:layout_gravity="center_vertical"/>

    <RelativeLayout
        android:id="@+id/system_main_item_content_layout"
        android:layout_width="0dp"
        android:layout_weight="10"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/softmanager_main_left">

        <cyee.widget.CyeeTextView
            android:id="@+id/system_main_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="18dp" />

        <cyee.widget.CyeeTextView
            android:id="@+id/system_main_item_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/system_main_item_title"
            android:focusable="false"
            android:singleLine="false"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="12dp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/system_main_item_tail_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/softmanager_main_left" />

</LinearLayout>