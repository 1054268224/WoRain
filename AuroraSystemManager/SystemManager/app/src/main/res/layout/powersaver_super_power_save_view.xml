<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/introduction_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/power_super_view_margintop"
            android:background="@drawable/super_power_save_mode" />
        
        <!-- Gionee <yangxinruo> <2015-9-9> <modify> for CR01549842 begin -->
        <cyee.widget.CyeeTextView
            android:id="@+id/introduction_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/power_super_view_text_margintop"
            android:text="@string/super_power_mode_introduction_string1"
            android:textColor="@color/super_power_mode_introduction_color"
            android:textSize="@dimen/power_super_view_text_textsize" />

        <cyee.widget.CyeeTextView
            android:id="@+id/introduction_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:text="@string/super_power_mode_introduction_string2"
            android:textColor="@color/super_power_mode_introduction_color"
            android:textSize="@dimen/power_super_view_text_textsize" />
        <!-- Gionee <yangxinruo> <2015-9-9> <modify> for CR01549842 end -->
        
        <cyee.widget.CyeeTextView
            android:id="@+id/time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/power_super_view_text_margintop"
            android:gravity="center_horizontal"
            android:text="@string/super_power_mode_introduction_string3"
            android:textColor="@color/super_power_mode_sumary_color"
            android:textSize="@dimen/power_super_view_text_textsize" />

        <cyee.widget.CyeeTextView
            android:id="@+id/plugin_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/power_super_view_text_margintop"
            android:gravity="center_horizontal"
            android:text="@string/super_power_mode_introduction_string4"
            android:textColor="@color/super_power_mode_introduction_color"
            android:textSize="@dimen/power_super_view_text_textsize" />
    </LinearLayout>

</ScrollView>