<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/cyee_timeday_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal" >

        <cyee.widget.CyeeNumberPicker
            android:id="@+id/cyee_day_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp" />

        <cyee.widget.CyeeTimePicker
            android:id="@+id/cyee_time_spinner"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/cyee_lunar_mode_rl"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="?android:attr/listChoiceBackgroundIndicator"
        android:clickable="true"
        android:visibility="gone"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/cyee_divider_height"
            android:background="@color/cyee_divider_line_color" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:paddingEnd="30dp"
            android:paddingStart="30dp" >

            <cyee.widget.CyeeTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="@string/cyee_lunar_calendar"
                android:textColor="@color/cyee_content_color_primary_on_backgroud_c1"
                android:textSize="16sp" />

            <cyee.widget.CyeeSwitch
                android:id="@+id/cyee_lunar_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:background="@null"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:gravity="end" />
        </RelativeLayout>
    </LinearLayout>

</merge>