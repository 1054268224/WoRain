<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:theme="@style/Theme.MaterialComponents"
    tools:context=".trafficmonitor.TrafficMonitorMainActivity">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/traffic_tab"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/common_blue"
        app:tabIndicatorColor="@color/tab_color"
        app:tabSelectedTextColor="@color/tab_select_color"
        app:tabTextColor="@color/tab_color"/>


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/traffic_viewpager"
        android:layout_width="match_parent"
        android:layout_height="225dp"
        android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/null_simcard_view"
        android:layout_width="match_parent"
        android:layout_height="225dp"
        android:background="@color/common_blue"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:src="@drawable/prompt_traffic_settings"/>

        <include layout="@layout/traffic_detail_view" />

    </RelativeLayout>





    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/traffic_title"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="bottom"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="5dp"
            android:textSize="16sp"
            android:text="@string/traffic_ranking_list"
            android:textColor="@color/item_black"/>

        <include layout="@layout/btn_act" />

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/traffic_item_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>



</LinearLayout>