<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.Cyee.Light.Button.Translucent">
        <item name="android:background">@drawable/cyee_btn_translucent_bg_ripple</item>
        <item name="android:textColor">@color/cyee_btn_text_color_translucent</item>
    </style>
    
    <style name="Widget.Cyee.Light.ActionBar.Solid.Translucent">
        <item name="cyeedivider">?android:attr/dividerVertical</item>
        <item name="cyeeprogressBarPadding">@dimen/cyee_progressBar_Padding</item>
        <item name="cyeeitemPadding">@dimen/cyee_item_Padding</item>
        <item name="cyeebackground">@color/cyee_translucent_background</item>
        <item name="cyeebackgroundStacked">@color/cyee_translucent_background</item>
        <item name="cyeebackgroundSplit">@color/cyee_translucent_background</item>
    </style>
    
    <style name="CyeeListItemLevel1.Translucent">
        <item name="android:textColor">@color/cyee_text_color_light</item>
        <item name="android:textSize">@dimen/cyee_list_item_level1_text_size</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>
    
    <style name="CyeeListItemLevel2.Translucent">
        <item name="android:textColor">@color/cyee_bright_foreground_tertiary_light</item>
        <item name="android:textSize">@dimen/cyee_list_item_level2_text_size</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>
    
    <style name="Widget.Cyee.ActionBar.TabBar.Translucent">
        <item name="cyeebackgroundStacked">@color/cyee_translucent_background</item>
        <item name="android:background">@color/cyee_translucent_background</item>
    </style>
    
    <style name="CyeeAlphabetIndexViewStyle.Translucent">
        <item name="cyeeEnableSectionColor">@color/cyee_content_color_secondary_on_backgroud_c2_translucent</item>
        <item name="cyeeDisableSectionColor">@color/cyee_content_color_thirdly_on_backgroud_c3_translucent</item>
        <item name="cyeeShowingLetterColor">@color/cyee_accent_color_g1</item>
    </style>
    
    <style name="Theme.Cyee.SplashLight.Translucent" parent="@style/Theme.Cyee.Light.SplashLight">
        <item name="android:windowBackground">@drawable/cyee_background_dark</item>
    </style>
</resources>
