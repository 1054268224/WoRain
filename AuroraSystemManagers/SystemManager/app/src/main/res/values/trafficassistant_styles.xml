<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="TrafficTheme" parent="@style/Theme.Cyee.Light">
        <item name="cyeeactionBarStyle">@style/GnActionBarStyle</item>
        <item name="android:actionModeStyle">@style/GnActionModeStyle</item>
        <item name="android:homeAsUpIndicator">@drawable/cyee_ic_ab_back_light</item>
    </style>

    <style name="GnActionBarStyle" parent="Widget.Cyee.Light.ActionBar.Solid.Inverse">
        <item name="cyeebackground">@color/common_green_bg</item>
        <item name="cyeetitleTextStyle">@style/GnActionBarTitleTextStyle</item>
        <item name="cyeesubtitleTextStyle">@style/GnActionBarSubtitleTextStyle</item>
    </style>

    <style name="GnActionModeStyle" parent="android:Widget.Holo.ActionMode">
        <item name="android:background">@color/common_green_bg</item>
        <item name="android:titleTextStyle">@style/GnActionModeTextStyle</item>
    </style>

    <style name="GnActionBarTitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textSize">@dimen/gn_actionbar_title_text_size</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="GnActionBarSubtitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Subtitle">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="GnActionModeTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionMode.Title">
        <item name="android:textSize">@dimen/gn_actionbar_title_text_size</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="GnSubTitleTextStyle">
        <item name="android:textSize">@dimen/gn_subtitle_text_size</item>
    </style>

    <!-- Gionee: mengdw <2015-10-20> add for CR01571760 begin -->
    <style name="FloatActivity" parent="@style/Theme.Cyee.Light">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <!-- Gionee: mengdw <2015-10-20> add for CR01571760 end -->

</resources>