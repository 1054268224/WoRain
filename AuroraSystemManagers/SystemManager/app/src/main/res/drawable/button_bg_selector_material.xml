<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#808080" >

    <item>
        <inset
            android:insetBottom="@dimen/cyee_button_inset_vertical_material"
            android:insetLeft="@dimen/cyee_button_inset_horizontal_material"
            android:insetRight="@dimen/cyee_button_inset_horizontal_material"
            android:insetTop="@dimen/cyee_button_inset_vertical_material" >
            <shape android:shape="rectangle" >
                <corners android:radius="@dimen/cyee_control_corner_material" />

                <solid android:color="#4cffffff"
                    />

                <padding
                    android:bottom="@dimen/cyee_button_padding_vertical_material"
                    android:left="@dimen/cyee_button_padding_horizontal_material"
                    android:right="@dimen/cyee_button_padding_horizontal_material"
                    android:top="@dimen/cyee_button_padding_vertical_material" />
            </shape>
        </inset>
    </item>

</ripple>










