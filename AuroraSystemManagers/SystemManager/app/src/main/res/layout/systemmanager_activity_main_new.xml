    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7">

        <cyee.widget.CyeeListView
            android:id="@+id/running_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"/>

        <cyee.widget.CyeeTextView
            android:id="@+id/no_running_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="无正在运行的应用"
            android:visibility="gone"/>

        <ProgressBar
            android:id="@+id/loading_process_bar"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_centerInParent="true"
            android:gravity="center"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <cyee.widget.CyeeButton
            android:id="@+id/rocket_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="@string/speedup_btn_text"
            android:ellipsize="end"
            android:maxWidth="90dp"
            android:singleLine="true"
            android:textSize="14dp"
            android:background="@drawable/optimise_shape"/>

    </RelativeLayout>

