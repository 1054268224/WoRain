<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cusattrs="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/common_blue_bg"
        android:layout_weight="4">

        <com.cydroid.softmanager.view.MainCircleView
            android:id="@+id/main_circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            cusattrs:innerCircleAlpha="30"
            cusattrs:innerRadius="@dimen/main_innerRadius"
            cusattrs:innerStartAngle="124"
            cusattrs:innerStrokeWidth="@dimen/main_innerStrokeWidth"
            cusattrs:innerSweepAngle="290"
            cusattrs:outerCircleAlpha="0"
            cusattrs:outerRadius="@dimen/main_outerRadius"
            cusattrs:outerStartAngle="0"
            cusattrs:outerStrokeWidth="@dimen/main_outerStrokeWidth"
            cusattrs:outerSweepAngle="360" />

        <com.cydroid.softmanager.view.MainOuterCircleView
            android:id="@+id/main_outer_circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            cusattrs:innerCircleAlpha="0"
            cusattrs:innerRadius="@dimen/main_innerRadius"
            cusattrs:innerStartAngle="124"
            cusattrs:innerStrokeWidth="@dimen/main_innerStrokeWidth"
            cusattrs:innerSweepAngle="290"
            cusattrs:outerCircleAlpha="0"
            cusattrs:outerRadius="@dimen/main_outerRadius"
            cusattrs:outerStartAngle="0"
            cusattrs:outerStrokeWidth="@dimen/main_outerStrokeWidth"
            cusattrs:outerSweepAngle="360" />

        <cyee.widget.CyeeTextView
            android:id="@+id/scan_score"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:textSize="50sp" />

        <cyee.widget.CyeeTextView
            android:id="@+id/scan_score_unit"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/scan_score"
            android:layout_marginLeft="5dp"
            android:text="@string/text_score_unit"
            android:textColor="@color/white"
            android:textSize="35sp" />

        <cyee.widget.CyeeTextView
            android:id="@+id/memory_release_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/main_memory_releast_txt_margin_top"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:visibility="gone" />

