<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/header_bar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="0dp"
        android:visibility="gone">

        <cyee.widget.CyeeTextView
            android:id="@+id/header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:paddingTop="@dimen/header_padding_top"
            android:textColor="@color/app_use_today"
            android:textSize="14sp"
            android:visibility="gone"/>
        <cyee.widget.CyeeTextView
            android:id="@+id/header_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:paddingEnd="20dp"
            android:paddingTop="@dimen/header_padding_top"
            android:textColor="@color/app_use_today"
            android:textSize="14sp"
            android:visibility="gone" />
    </RelativeLayout>

    <!-- Modify by HZH on 2019/5/13 for ui start ^_^ -->
    <View
        android:id="@+id/separator_line"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_line"
        android:layout_below="@+id/header_bar"
        android:background="@color/divider_color" />
    <!-- Modify by HZH on 2019/5/13 for ui start ^_^ -->
    
    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        layout="@layout/loadview" />

    <include
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/header_bar"
        android:layout_above="@+id/btn_add_app"
        android:layout_marginBottom="9dp"
        layout="@layout/listview" />

    <!-- Replace by HZH on 2019/5/11 for ui start ^_^ -->
    <cyee.widget.CyeeTextView
        android:id="@+id/freezed_app_empty_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/empty_text_color_primary"
        android:textSize="16sp" />
    <!-- Replace by HZH on 2019/5/11 for ui end ^_^ -->

    <cyee.widget.CyeeButton
        android:id="@+id/add_freeze_app_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/txt_add_freeze_app"
        android:textSize="16sp"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_add_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape_background_enable"
        android:textColor="@color/white"
        android:text="@string/txt_add_freeze_app"
        android:textSize="14sp"
        android:gravity="center"/>

    <com.quinny898.library.persistentsearch.SearchBox
        android:id="@+id/searchbox"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />
</RelativeLayout>