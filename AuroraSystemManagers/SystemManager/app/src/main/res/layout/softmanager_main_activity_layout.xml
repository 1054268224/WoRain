<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cusattrs="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/storage_info"
        android:layout_width="match_parent"
        android:layout_height="@dimen/softmanager_storage_info_height"
        android:background="@drawable/common_blue_bg"
        android:visibility="gone">

        <cyee.widget.CyeeTextView
            android:id="@+id/no_storage_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/storage_unmounted"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:visibility="gone" />

        <com.cydroid.softmanager.view.SoftManagerCircleView
            android:id="@+id/soft_circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            cusattrs:centerX="@dimen/softmanager_centerX"
            cusattrs:centerY="@dimen/softmanager_centerY"
            cusattrs:innerCircleAlpha="255"
            cusattrs:innerCircleColor="#ffffff"
            cusattrs:innerRadius="@dimen/softmanager_innerRadius"
            cusattrs:innerStartAngle="-180"
            cusattrs:innerStrokeWidth="@dimen/softmanager_innerStrokeWidth"
            cusattrs:innerSweepAngle="300"
            cusattrs:outerCircleAlpha="255"
            cusattrs:outerRadius="@dimen/softmanager_outerRadius"
            cusattrs:outerStartAngle="-180"
            cusattrs:outerStrokeWidth="@dimen/softmanager_outerStrokeWidth"
            cusattrs:outerSweepAngle="300" />

        <ImageView
            android:id="@+id/phone_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/softmanager_phone_img_marginTop"
            cusattrs:srcCompat="@drawable/phone_inside" />

        <ImageView
            android:id="@+id/sd_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/softmanager_sd_img_marginTop"
            cusattrs:srcCompat="@drawable/sd_outside" />

        <cyee.widget.CyeeTextView
            android:id="@+id/single_progress_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/softmanager_single_progress_title_marginTop"
            android:text="@string/single_progress_title"
            android:textColor="@color/single_progress_color"
            android:textSize="12sp" />

        <cyee.widget.CyeeTextView
            android:id="@+id/single_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/softmanager_single_progress_marginTop"
            android:textColor="@color/single_progress_color"
            android:textSize="65sp" />

        <!-- Add by HZH on 2019/8/2 for EJWJ-398 start  -->
        <TextView
            android:id="@+id/double_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/softmanager_single_progress_marginTop"
            android:textColor="@color/single_progress_color"
            android:textSize="30sp"
            android:visibility="gone" />
        <!-- Add by HZH on 2019/8/2 for EJWJ-398 end  -->

        <cyee.widget.CyeeTextView
            android:id="@+id/single_progress_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/softmanager_single_progress_sign_marginTop"
            android:layout_toRightOf="@+id/single_progress"
            android:text="@string/single_progress_sign"
            android:textColor="@color/single_progress_color"
            android:textSize="17sp" />

        <RelativeLayout
            android:id="@+id/storage_usage_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/softmanager_storage_usage_info_marginBottom" >
        </RelativeLayout>
    </RelativeLayout>

    <include
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        layout="@layout/listview" />

</LinearLayout>