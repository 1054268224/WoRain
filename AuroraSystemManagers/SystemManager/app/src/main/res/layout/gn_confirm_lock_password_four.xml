<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <cyee.widget.CyeeTextView
            android:id="@+id/appheaderText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="70dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="@color/cyee_content_color_primary_on_backgroud_c1"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

			<LinearLayout        
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="20dp"
		        android:orientation="horizontal">

		        <ImageView
	                android:id="@+id/gnfacerecogimage"
	                android:layout_width="52dp"
	                android:layout_height="52dp"
	                android:layout_marginRight="30dp"
	                android:background="@drawable/applock_fr_normal"
	                android:visibility="gone" />
        
	            <ImageView
	                android:id="@+id/gnfingerprintimage"
	                android:layout_width="52dp"
	                android:layout_height="52dp"
	                android:layout_gravity="center"
	                android:layout_marginRight="30dp"
	                android:background="@drawable/applock_fp_normal"
	                android:visibility="gone" />

	            <ImageView
	                android:id="@+id/gnpwdimage"
	                android:layout_width="52dp"
	                android:layout_height="52dp"
	                android:background="@drawable/applock_pwd_normal"
	                android:visibility="gone" />

            </LinearLayout>
            <!-- header text ('Enter Pin') -->
            <!--Gionee <lizhipeng> <2015-10-17> modify for CR01571735 begin -->
            <cyee.widget.CyeeTextView
                android:id="@+id/headerText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="40dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textColor="@color/cyee_content_color_primary_on_backgroud_c1"
                android:textSize="16sp" />
            <!--Gionee <lizhipeng> <2015-10-17> modify for CR01571735 end -->
            <!-- spacer above text entry field -->
            <cyee.widget.CyeeButton
                android:id="@+id/cancelButton"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|bottom"
                android:layout_marginBottom="14dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:text="@string/cancel" />

            <!--  Gionee <chenml> <2016-03-25> add for CR01660246 begin  -->
            <FrameLayout
                android:id="@+id/password_entry_container"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:cursorVisible="false"
                android:inputType="numberPassword"
                android:maxLength="4"
                app:passwordColor="@color/passwordColor"
                app:passwordRadius="@dimen/passwordRadius"/>
            <!--  Gionee <chenml> <2016-03-25> add for CR01660246 end  -->
            <!-- Alphanumeric keyboard -->
            <com.cydroid.softmanager.applock.PasswordEntryKeyboardView
                android:id="@+id/keyboard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="#00000000"
                android:keyBackground="@*android:drawable/btn_keyboard_key_fulltrans"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1" />

            <cyee.widget.CyeeTextView
                android:id="@+id/forget_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="80dp"
                android:focusable="true"
                android:text="@string/gn_securitypassword_forget"
                android:textColor="@color/cyee_accent_color_g1"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>