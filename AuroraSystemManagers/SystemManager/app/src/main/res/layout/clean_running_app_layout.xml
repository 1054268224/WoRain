<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <include
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            layout="@layout/loadview" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/list_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/button_height"
        android:orientation="vertical"
        android:visibility="gone" >

        <cyee.widget.CyeeTextView
            android:id="@+id/header_text"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="@dimen/text_margin_left"
            android:paddingTop="@dimen/header_padding_top"
            android:singleLine="true"
            android:textColor="#00a6ce"
            android:textSize="@dimen/text_size" />

        <View
            android:id="@+id/separator_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_line"
            android:background="@color/divider_color" />

        <cyee.widget.CyeeListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cyee_list_divider_padding_end="0dp"
            app:cyee_list_divider_padding_start="@dimen/icon_list_divider_left_padding" >
        </cyee.widget.CyeeListView>

        <cyee.widget.CyeeTextView
            android:id="@+id/txt_no_cleaning_process"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/oneclean_no_process_running_txt"
            android:textSize="10sp"
            android:visibility="gone" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            layout="@layout/btnview" />
    </RelativeLayout>

    <cyee.widget.CyeeTextView
        android:id="@+id/text_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/empty_view_icon_and_text_margin_top"
        android:drawablePadding="@dimen/empty_icon_text_space"
        android:drawableTop="@drawable/empty_image"
        android:textColor="@color/empty_text_color_primary"
        android:textSize="@dimen/empty_text_size"
        android:visibility="gone" />

</RelativeLayout>