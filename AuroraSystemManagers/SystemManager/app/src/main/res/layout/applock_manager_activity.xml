<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <RelativeLayout
        android:id="@+id/header_bar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="0dp">
        <!-- Chenyee xionghg 20170929 modify for 216590 begin -->
        <cyee.widget.CyeeTextView
            android:id="@+id/header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingStart="20dp"
            android:paddingEnd="10dp"
            android:text="@string/text_app_lock_prompt"
            android:textColor="@color/app_use_today"
            android:textSize="14dp"
            android:maxLines="2"
            android:ellipsize="end" />
        <!-- Chenyee xionghg 20170929 modify for 216590 end -->
        <cyee.widget.CyeeTextView
            android:id="@+id/header_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:paddingEnd="20dp"
            android:paddingTop="@dimen/header_padding_top"
            android:textColor="@color/app_use_today"
            android:textSize="14sp"
            android:visibility="gone" />
    </RelativeLayout>

    <View
        android:id="@+id/separator_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_line"
        android:layout_below="@+id/header_bar"
        android:background="@color/divider_color" />

    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        layout="@layout/loadview" />
    <include
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/separator_line"
        layout="@layout/listview" />
    <LinearLayout
        android:id="@+id/empty_app_lock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:orientation="vertical"
        android:visibility="gone" >
        <cyee.widget.CyeeTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableTop="@drawable/empty_image"
            android:text="@string/text_no_app_lock_app"
            android:textColor="@color/empty_text_color_primary"
            android:textSize="16sp" />
        <cyee.widget.CyeeTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="15dp"
            android:textColor="@color/empty_text_color_primary"
            android:textSize="16sp" 
            android:visibility="gone" />
    </LinearLayout>

    <com.quinny898.library.persistentsearch.SearchBox
        android:id="@+id/searchbox"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />

</RelativeLayout>
