<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <cyee.widget.CyeeTextView
            android:id="@+id/appheaderText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="70dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="@color/cyee_content_color_primary_on_backgroud_c1"
            android:textSize="20sp" />

        <LinearLayout
            android:id="@+id/topLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout        
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="20dp"
		        android:layout_gravity="center"
		        android:orientation="horizontal">

		        <ImageView
	                android:id="@+id/gnfacerecogimage"
	                android:layout_width="52dp"
	                android:layout_height="52dp"
	                android:layout_marginRight="30dp"
	                android:background="@drawable/applock_fr_normal"
	                android:visibility="gone" />
        
	            <ImageView
	                android:id="@+id/gnfingerprintimage"
	                android:layout_width="52dp"
	                android:layout_height="52dp"
	                android:layout_gravity="center"
	                android:layout_marginRight="30dp"
	                android:background="@drawable/applock_fp_normal"
	                android:visibility="gone" />

	            <ImageView
	                android:id="@+id/gnpwdimage"
	                android:layout_width="52dp"
	                android:layout_height="52dp"
	                android:background="@drawable/applock_pwd_normal"
	                android:visibility="gone" />
            </LinearLayout>

            <!--     android:background="#f0f0f0" -->
            <!--Gionee <lizhipeng> <2015-10-17> modify for CR01571735 begin -->
            <cyee.widget.CyeeTextView
                android:id="@+id/headerText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="16dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textColor="@color/cyee_content_color_primary_on_backgroud_c1"
                android:textSize="16sp" />
            <!--Gionee <lizhipeng> <2015-10-17> modify for CR01571735 end -->
            <cyee.widget.CyeeButton
                android:id="@+id/cancelButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="@string/cancel" />

            <com.android.internal.widget.LockPatternView
                android:id="@+id/lockPattern"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@color/lock_pattern_background"
                style="@style/GnSettingsLightTheme"
                />
            <cyee.widget.CyeeTextView
                android:id="@+id/footerText"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1.0"
                android:gravity="center"
                android:textSize="14sp" />

            <cyee.widget.CyeeTextView
                android:id="@+id/forget_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="26dp"
                android:focusable="true"
                android:text="@string/gn_securitypassword_forget"
                android:textColor="@color/cyee_accent_color_g1"
                android:textSize="14sp" />

        </LinearLayout>
    </LinearLayout>
</FrameLayout>
