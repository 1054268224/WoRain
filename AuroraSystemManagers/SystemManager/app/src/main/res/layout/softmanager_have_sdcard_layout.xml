<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/double_storage_info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/phone_storage_info"
        android:layout_width="179.5dp"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <cyee.widget.CyeeTextView
            android:id="@+id/phone_usage_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/single_progress_color"
            android:textSize="@dimen/second_level_small_size" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">
            <ImageView
                android:id="@+id/phone_img_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/phone_img_bg"
                android:layout_gravity="center_vertical"/>

            <cyee.widget.CyeeTextView
                android:id="@+id/phone_storage_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/softmanager_storage_title_paddingLeft"
                android:textColor="@color/single_progress_color"
                android:textSize="@dimen/second_level_big_size" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/vertical_line"
        android:layout_width="1px"
        android:layout_height="36dp"
        android:layout_gravity="center"
        android:background="@color/single_progress_color" />

    <LinearLayout
        android:id="@+id/sd_storage_info"
        android:layout_width="179.5dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <cyee.widget.CyeeTextView
            android:id="@+id/sd_usage_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/single_progress_color"
            android:textSize="@dimen/second_level_small_size"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:id="@+id/sd_img_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/sd_img_bg"
                android:layout_gravity="center_vertical"/>

            <cyee.widget.CyeeTextView
                android:id="@+id/sd_storage_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/softmanager_storage_title_paddingLeft"
                android:textColor="@color/single_progress_color"
                android:textSize="@dimen/second_level_big_size"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>