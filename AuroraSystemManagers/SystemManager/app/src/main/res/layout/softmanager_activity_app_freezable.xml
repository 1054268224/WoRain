<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    
	<include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        layout="@layout/loadview" />

    <cyee.widget.CyeeExpandableListView 
        android:id="@+id/freeze_app_expand_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cyee_list_divider_padding_end="0dp"
        app:cyee_list_divider_padding_start="@dimen/icon_list_divider_left_padding"
        app:cyeeGroupDivider="@android:color/transparent"
        android:visibility="gone"
        android:layout_marginTop="0dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/freeze_app_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_freeze_app"
        android:layout_marginBottom="9dp"/>
    
    <RelativeLayout
        android:id="@+id/freeze_app_empty_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="gone" >
        
        <ImageView 
            android:id="@+id/freeze_app_empty_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:background="@drawable/empty_image"/>
        
        <cyee.widget.CyeeTextView 
            android:id="@+id/freeze_app_empty_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/empty_text_color_primary"
            android:textSize="16sp"
            android:layout_marginTop="4dp"
            android:layout_below="@+id/freeze_app_empty_img"
            android:layout_centerHorizontal="true"
            android:text="@string/text_no_freeze_app"/>
    </RelativeLayout>

    <Button
        android:id="@+id/btn_freeze_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape_background_enable"
        android:textColor="@color/white"
        android:text="@string/txt_freeze_app"
        android:textSize="14sp"
        android:gravity="center"/>

    <com.quinny898.library.persistentsearch.SearchBox
        android:id="@+id/searchbox"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />
</RelativeLayout>