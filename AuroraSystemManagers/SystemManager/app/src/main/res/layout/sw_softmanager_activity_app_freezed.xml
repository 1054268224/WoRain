<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/header_bar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="0dp">

        <cyee.widget.CyeeTextView
            android:id="@+id/header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:paddingTop="@dimen/header_padding_top"
            android:textColor="@color/app_use_today"
            android:textSize="14sp" />
        <cyee.widget.CyeeTextView
            android:id="@+id/header_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:paddingEnd="20dp"
            android:paddingTop="@dimen/header_padding_top"
            android:textColor="@color/app_use_today"
            android:textSize="14sp"
            android:visibility="gone" />
    </RelativeLayout>
    
    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        layout="@layout/loadview" />

    <include
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/header_bar"
        android:layout_above="@+id/add_freeze_app_btn"
        layout="@layout/listview" />

    <RelativeLayout
        android:id="@+id/freezed_app_empty_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"
        android:visibility="gone" >
        <ImageView 
            android:id="@+id/freezed_app_empty_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:background="@drawable/sw_empty_image" />
        <cyee.widget.CyeeTextView 
            android:id="@+id/freezed_app_empty_txt_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_below="@+id/freezed_app_empty_img"
            android:layout_centerHorizontal="true"
            android:text="@string/text_no_freezed_app_first"
            android:textColor="@color/empty_text_color_primary"
            android:textSize="16sp" />
        <cyee.widget.CyeeTextView 
            android:id="@+id/freezed_app_empty_txt_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_below="@+id/freezed_app_empty_txt_first"
            android:layout_centerHorizontal="true"
            android:text="@string/text_no_freezed_app_second"
            android:textColor="@color/empty_text_color_primary"
            android:textSize="16sp" />
    </RelativeLayout>

    <cyee.widget.CyeeButton
        android:id="@+id/add_freeze_app_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/txt_add_freeze_app"        
        android:textSize="16sp" />

    <com.quinny898.library.persistentsearch.SearchBox
        android:id="@+id/searchbox"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />

</RelativeLayout>