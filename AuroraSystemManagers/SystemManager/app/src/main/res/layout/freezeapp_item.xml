<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/ripple_gray_with_white_mask" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/prefs_margin_left"
        android:layout_marginRight="@dimen/prefs_margin_right"
        android:layout_marginTop="@dimen/prefs_text_top"
        android:layout_marginBottom="@dimen/prefs_text_bottom"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/soft_image"
            android:layout_width="35dp"
            android:layout_height="35dp"/>

        <TextView
            android:id="@+id/soft_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:textSize="17sp"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:textColor="@color/item_black"/>

    </LinearLayout>

    <include layout="@layout/wheatek_checkbox" />

</RelativeLayout>