<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dark_warpaper"
    android:orientation="vertical" >

    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/date_marginLeft"
        android:layout_marginTop="@dimen/date_marginTop"
        layout="@layout/plugin_date_time" />

    <TextView
        android:id="@+id/time_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/container"
        android:layout_marginTop="@dimen/time_textview_margin_top"
        android:layout_marginStart="@dimen/date_marginLeft"
        android:gravity="center"
        android:textColor="@color/white_color"
        android:textSize="12dp" />

    <LinearLayout
        android:id="@+id/exit_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/time_textview"
        android:layout_marginTop="@dimen/exit_view_margin_top"
        android:layout_marginStart="@dimen/date_marginLeft"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal"
        android:paddingBottom="15dp"
        android:paddingEnd="15dp"
        android:paddingTop="15dp" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:duplicateParentState="true"
            android:src="@drawable/exit_bg" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:duplicateParentState="true"
            android:gravity="center"
            android:text="@string/exit_string"
            android:textColor="@color/exit_color"
            android:textSize="14dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/app2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/exit_view"
        android:layout_marginTop="@dimen/app_icon_margin_up"
        android:layout_marginStart="@dimen/app_icon_margin_left"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/phone"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:textColor="@color/app_color" />

        <TextView
            android:id="@+id/contacts"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="@dimen/app_icon_margin_left1"
            android:gravity="center"
            android:textColor="@color/app_color" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/app1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app2"
        android:layout_marginTop="@dimen/app_icon_margin_up1"
        android:layout_marginStart="@dimen/app_icon_margin_left"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/sms"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:textColor="@color/app_color" />

        <TextView
            android:id="@+id/time"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="@dimen/app_icon_margin_left1"
            android:gravity="center"
            android:textColor="@color/app_color" />
    </LinearLayout>

</RelativeLayout>